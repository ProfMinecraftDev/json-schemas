{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Configuración de Server App Desktop (Preview)",
  "type": "object",
  "required": [
    "UI",
    "Server",
    "Startup"
  ],
  "properties": {
    "UI": {
      "type": "object",
      "properties": {
        "Backdrop": {
          "type": "integer",
          "description": "Efecto de fondo de la interfaz (0: Mica, 1: Mica Alt, 2: Acrylic)",
          "enum": [
            0,
            1,
            2
          ],
          "example": [
            0
          ]
        },
        "Theme": {
          "type": "integer",
          "description": "Tema de la aplicación (0: System, 1: Light, 2: Dark)",
          "enum": [
            0,
            1,
            2
          ],
          "example": [
            2
          ]
        },
        "Language": {
          "type": "string",
          "description": "Código ISO del lenguaje (ej: 'es-VE', 'en-US'), cadena vacía para usar el del sistema",
          "enum": [
            "",
            "es-MX"
          ],
          "example": [
            "es-MX"
          ]
        }
      }
    },
    "Server": {
      "type": "object",
      "properties": {
        "Path": {
          "type": "string",
          "description": "Ruta de la carpeta del servidor de Minecraft",
          "example": [
            "C:\\Games\\MinecraftServer"
          ]
        },
        "Executable": {
          "type": "string",
          "description": "Ruta completa al archivo .exe del servidor",
          "example": [
            "C:\\Games\\MinecraftServer\\bedrock_server.exe"
          ]
        },
        "Edition": {
          "type": "integer",
          "description": "Edición del servidor (0: Bedrock, 1: Java)",
          "enum": [
            0,
            1
          ],
          "example": [
            0
          ]
        },
        "RamLimit": {
          "description": "Límite de memoria RAM (Minecraft Java) asignada en MB",
          "type": "integer",
          "minimum": 512,
          "example": [
            2048
          ]
        }
      }
    }
  },
  "Startup": {
    "type": "object",
    "properties": {
      "AutoStartServer": {
        "type": "boolean",
        "description": "Inicia el servidor automáticamente al abrir la app",
        "example": [
          false
        ]
      },
      "CloseInSystemTray": {
        "type": "boolean",
        "description": "Minimiza a la bandeja del sistema en lugar de cerrar",
        "example": [
          true
        ]
      }
    }
  }
}