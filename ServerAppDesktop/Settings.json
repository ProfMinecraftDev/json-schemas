{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ServerAppDesktop Settings",
  "type": "object",
  "required": [
    "edition",
    "server-ip",
    "server-port",
    "server-location",
    "start-server-command",
    "theme",
    "mode"
  ],
  "properties": {
    "edition": {
      "type": "string",
      "enum": ["bedrock", "java"]
    },
    "server-ip": {
      "type": "string"
    },
    "server-port": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535
    },
    "server-location": {
      "type": "string",
      "pattern": "^([a-zA-Z]:\\\\|/).+"
    },
    "start-server-command": {
      "type": "string",
      "pattern": "^(?!([a-zA-Z]:\\\\|/)).+"
    },
    "theme": {
      "type": "string",
      "enum": ["mica", "micaalt", "mica-alt", "desktop", "acrylic", "none"]
    },
    "mode": {
      "type": "string",
      "enum": ["light", "dark", "system"]
    }
  },
  "additionalProperties": false
}
