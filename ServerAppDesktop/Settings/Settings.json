{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Server App Desktop Settings",
  "type": "object",
  "required": [
    "ServerType",
    "Backdrop",
    "Theme",
    "ServerAutoLaunch",
    "RamLimit",
    "ServerPath",
    "ExecutableFile",
    "ServerPort"
  ],
  "properties": {
    "ServerType": {
      "type": "string",
      "enum": ["Java", "Bedrock"],
      "description": "Tipo de servidor: Java o Bedrock"
    },
    "Backdrop": {
      "type": "string",
      "enum": ["Mica", "Mica alt", "Acrylic"],
      "description": "Estilo visual de fondo"
    },
    "Theme": {
      "type": "string",
      "enum": ["Light", "Dark", "System"],
      "description": "Tema de la aplicación"
    },
    "ServerAutoLaunch": {
      "type": "boolean",
      "description": "Indica si el servidor se lanza automáticamente"
    },
    "RamLimit": {
      "type": "integer",
      "minimum": 512,
      "description": "Límite de RAM en MB"
    },
    "ServerPath": {
      "type": "string",
      "pattern": "^[A-Z]:\\\\.*",
      "description": "Ruta de la carpeta del servidor"
    },
    "ExecutableFile": {
      "type": "string",
      "pattern": "^[A-Z]:\\\\.*\\.exe$",
      "description": "Ruta del ejecutable del servidor"
    },
    "ServerPort": {
      "type": "integer",
      "minimum": 1,
      "maximum": 65535,
      "description": "Puerto del servidor"
    }
  }
}
